{
  "manifest_version": 3,
  "name": "RoMutuals",
  "version": "1.1",
  "permissions": ["declarativeContent"],
  "host_permissions": [
    "https://friends.roblox.com/*",
    "https://users.roblox.com/*",
    "https://apis.roblox.com/*",
    "https://www.roblox.com/*",
    "https://*.roblox.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["starborn.ttf"],
      "matches": ["https://*.roblox.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://www.roblox.com/users/*/profile"],
      "js": ["content.js"]
    }
  ]
}
